<div class="container">
    <h1>Flux de données</h1>
    {{#each articles}}
        <div class="article-card">
            <h2>{{this.title}}</h2>
            <p>Auteur: <span style="color: var(--neon-purple)">{{this.author}}</span></p>
            <p>{{this.content}}</p>
            <div class="actions">
                <a href="/articles/{{this.id}}" class="btn">Lire la suite</a>
            </div>
        </div>
    {{else}}
        <p>Aucune transmission de données détectée.</p>
    {{/each}}
</div>